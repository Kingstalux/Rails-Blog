<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <div class="post-heading">
        <div class="flex-post">
            <p><strong><%=@post.title%></strong> by <strong><%=@user.name%></strong></p>
            <div class="flex-comment">
                <p>Comments:  <%=@post.commentsCounter%></p>
                <p>Likes:  <%=@post.likesCounter%></p>
            </div>
        </div>
        <p><%=@post.text%></p>
    </div>

    <div class="comments">
        <%Post.all_comments(@post.id).each do |comment|%>
        <p><strong><%=@user.name%>:</strong> <%=comment.text%></p>
        <% end %>
    </div>

    <div class="space"></div>

  <h2>Add a comment</h2>

  <%= form_with model: @comment, url: user_post_comments_path(@user.id, @post.id) do |f| %>

  <div class="mb-3">
    <%= f.label :text %>
    <%= f.text_area :text, class: "form-control"%>
  </div>

  <div class="mb-3">
    <%= f.submit class: "btn btn-primary" %>
  </div>
  
<% end %>

    <div class="space"></div>

  <h2>Add a Like</h2>

  <%= form_with model: @like, url: user_post_likes_path(@user.id, @post.id) do |f| %>

  <div class="mb-3">
    <%= f.submit  class: "btn btn-primary" %>
  </div>
  
<% end %>

  </body>
</html>