<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <%= render "partials/user", user: @user %>

    <% @posts.includes(:comments).each do |post| %>
    <%= link_to 'posts/' + post.id.to_s, :remote => true do %>

    <%= render "partials/post", post: post %>
    <% end %>

    <%= render "partials/comment", post: post %>
    <%= button_to "Delete", user_post_path(@user.id, post.id), :method => :delete %>

    <% end %>


  </body>
</html>
